#:kivy 1.0.9

<Screen>:  
    playarea: playarea
    buttonstrip: buttonstrip
    cash_label: cash_label
    bet_size: bet_size
    shoe: shoe
    count_button: count_button
       
    orientation: 'vertical'
    spacing: 5
    padding: [5, 5, 5, 5]
   
    BoxLayout:
        id: infostrip
        size_hint_y: .05
        spacing: 5
        padding: 1
        Label:
            font_size: root.width * .025
            text: "CASH"
            size_hint_x: .1
        Label:
            id: cash_label
            font_size: root.width * .025
            size_hint_x: .1
        Label:
            id: shoe
            font_size: root.width * .025
            size_hint_x: .3
        CountButton:
            id: count_button
            text: f"{'+' if self.count > 0 else ''}{self.count}" if self.state=="down" else "COUNT"
            font_size: root.width *.025
            size_hint_x: .125       
        Label:
            id: placeholder
            size_hint_x: .275
        Button:
            text: "RESTART"
            size_hint_x: .15
            font_size: root.width * .025
            background_normal:''
            background_color: 1, 0, 0
            on_release: root.start()
        Button:
            size_hint_x: .05
            Image: 
                source: "hamburger_icon_white.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
    PlayArea:
        id: playarea
        size_hint_y: .8
        canvas.before:
            Rectangle:
                source: "felt.jpg"
                pos: self.pos
                size: self.size
        on_size: self.update()
    BoxLayout:
        id: bottom
        size_hint_y: .1
        spacing: 5
        KivyBettingStrategy:
            id: bet_size
            size_hint_x: .2
            orientation: 'horizontal'
        Label:
            text: '${:,.0f}'.format(bet_size.value)
            font_size: root.width * 0.035
            size_hint_x: .05
        BoxLayout:
            id: buttonstrip
            size_hint_x: .75
            padding: [5, 5, 5, 5]
            DealButton  


<DealButton>:
    Button:
        size_hint_x: .7
        text: 'DEAL'
        on_release: app.screen.play()

<YesNoButton>:
    size_hint_x: .25

<InsuranceButtons>:
    spacing: root.width * 0.05
    padding: [40, 1, 40, 1]
    Label:
        size_hint_x: .5


<KivyBettingStrategy>:
    

<WelcomeScreen>:
    title: 'Welcome!'
    title_align: 'center'
    size_hint: .5, .5
    Label:
        text: "BlackJack"



